<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FitSharpMaui"
             x:Class="FitSharpMaui.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Dicionários Mesclados -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Recursos Adicionais -->
            <!-- Cor da Barra de Navegação -->
            <Color x:Key="NavigationBarColor">#B70D00</Color>
            <Color x:Key="NavigationBarTextColor">White</Color>

            <!-- Cor da Barra de Status -->
            <Color x:Key="StatusBarColor">#960C00</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>